# ========================================
# KvK Tracker - Environment Configuration
# ========================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# ========================================
# Application Settings
# ========================================
APP_NAME="KvK Kingdom Tracker"
APP_VERSION="1.0.0"

# Debug mode - MUST be False in production
DEBUG=False

# ========================================
# Security Settings (CRITICAL!)
# ========================================

# SECRET_KEY: Used for JWT token signing
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
# MUST be changed in production!
SECRET_KEY="your-secret-key-here-change-this"

# JWT algorithm (do not change unless you know what you're doing)
ALGORITHM="HS256"

# Token expiration in minutes (1440 = 24 hours)
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# ========================================
# Admin Credentials (CRITICAL!)
# ========================================
# CHANGE THESE IN PRODUCTION!
# Use strong passwords (16+ characters, mixed case, numbers, symbols)
ADMIN_USERNAME="admin"
ADMIN_PASSWORD="your-secure-password-here"

# ========================================
# MongoDB Database
# ========================================
# Local: mongodb://localhost:27017
# Atlas: mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority
MONGODB_URL="mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority"
DATABASE_NAME="kvk_tracker"

# ========================================
# Redis Cache (Optional - Phase 8)
# ========================================
# Redis improves performance by 10-20x for cached queries
# Leave empty to disable caching (app works fine without it)
#
# Local: redis://localhost:6379
# Railway: Use Railway Redis addon URL
# Upstash: Get from upstash.com (serverless, free tier available)
# Redis Cloud: Get from redis.com (free 30MB tier)
REDIS_URL=""

# ========================================
# CORS Configuration
# ========================================
# Comma-separated list of allowed origins (NO WILDCARDS IN PRODUCTION!)
# Example: ["https://kd-3584.vercel.app","http://localhost:3000"]
CORS_ORIGINS=["https://your-frontend-domain.vercel.app"]

# ========================================
# Discord Bot (Optional)
# ========================================
# Get token from: https://discord.com/developers/applications
# DISCORD_TOKEN="your-discord-bot-token-here"
# DISCORD_GUILD_ID="your-guild-id-here"

# ========================================
# Setup Instructions
# ========================================
# 1. Copy: cp .env.example .env
# 2. Generate SECRET_KEY (see command above)
# 3. Set strong ADMIN_PASSWORD
# 4. Update MONGODB_URL with your credentials
# 5. Configure CORS_ORIGINS for your frontend domain
# 6. Verify .env is in .gitignore
# 7. Run: python -m app.main
